@using InformationSystemManagment.Dto.CountryDto;
@model PostCountryDto;
@{
    ViewData["Title"] = "Create";
}
<head>
    <style>
        #map {
            height: 180px;
            width: 100%;
        }
    </style>
</head>
<div class="text-center">
    <div class="form-group">
        <form class="form-group" asp-controller="Country" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                    <label class="col-form-label">نام کشور</label>
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                    <label class="col-form-label">جمعیت </label>
                    <input asp-for="Population" type="text" class="form-control" />
                    <span asp-validation-for="Population" class="text-danger"></span>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                    <fieldset class="form-group">
                        <label class="col-form-label" for="Continent">قاره</label>
                        <select class="form-control" asp-for="ContinentId" asp-items="@ViewBag.Continents">
                            <option> قاره</option>
                        </select>
                    </fieldset>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                    <fieldset class="form-group">
                        <label class="col-form-label" for="Currency">واحد پول</label>
                        <select class="form-control" asp-for="CurrencyId" asp-items="@ViewBag.Currencies">
                            <option>واحد پول</option>
                        </select>
                    </fieldset>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                    <label class="col-form-label">نام مخفف </label>
                    <input asp-for="Abbreviation" type="text" class="form-control" />
                    <span asp-validation-for="Abbreviation" class="text-danger"></span>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                    <label class="col-form-label"> پرچم</label>
                    <input asp-for="File" type="file" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12 mb-1">
                    <label class="col-form-label">پیش شماره </label>
                    <input asp-for="Code" type="text" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div id="map"></div>

                    <input type="hidden" asp-for="Latitude" />
                    <input type="hidden" asp-for="Longitude" />
                </div>

                <div class="row mt-2">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Css {
    <link href="~/lib/leaflet/leaflet.css" rel="stylesheet" />

    @* <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" /> *@
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/leaflet/leaflet.js"></script>



    @* <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>*@

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            initializeMap();
        });

        function initializeMap() {
            var _lat = '35.69971058703441';
            var _long = '51.33791851292726';

            var map = L.map('map', { scrollWheelZoom: false }).setView([parseFloat(_lat), parseFloat(_long)], 15);
            //var map = L.map('map').setView([51.505, -0.09], 13);

            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19
            }).addTo(map);

            var marker = L.marker([_lat, _long]).addTo(map);



            setTimeout(function () {
                L.Unit, requestAnimationFrame(map.invalidateSize, map, !1, map._container);
            }, 3000);

            function onMapClick(e) {
                _lat = e.latlng.lat;
                _long = e.latlng.lng;
                $('#Latitude').val(_lat);
                $('#Longitude').val(_long);
                marker.setLatLng(e.latlng);
            }

            map.on('click', onMapClick);

        }

    </script>
}